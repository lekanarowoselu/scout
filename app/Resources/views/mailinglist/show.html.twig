{% extends 'base.html.twig' %}

{% block body %}
    <h1>MailingList</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mailingList.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mailingList.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ mailingList.email }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if mailingList.createdAt %}{{ mailingList.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if mailingList.updatedAt %}{{ mailingList.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Isconfirmed</th>
                <td>{% if mailingList.isConfirmed %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mailinglist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mailinglist_edit', { 'id': mailingList.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
