{% extends 'base.html.twig' %}

{% block body %}
    <h1>Page list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Metatitle</th>
                <th>Metadescription</th>
                <th>Content</th>
                <th>Slug</th>
                <th>Subtitle</th>
                <th>Pagename</th>
                <th>Special</th>
                <th>Showinmenu</th>
                <th>Path</th>
                <th>Sorting</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Bannername</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td><a href="{{ path('page_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                <td>{{ page.title }}</td>
                <td>{{ page.metaTitle }}</td>
                <td>{{ page.metaDescription }}</td>
                <td>{{ page.content }}</td>
                <td>{{ page.slug }}</td>
                <td>{{ page.subtitle }}</td>
                <td>{{ page.pageName }}</td>
                <td>{% if page.special %}Yes{% else %}No{% endif %}</td>
                <td>{% if page.showInMenu %}Yes{% else %}No{% endif %}</td>
                <td>{{ page.path }}</td>
                <td>{{ page.sorting }}</td>
                <td>{% if page.createdAt %}{{ page.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if page.updatedAt %}{{ page.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ page.bannername }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('page_show', { 'slug': page.slug }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('page_edit', { 'id': page.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('page_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
