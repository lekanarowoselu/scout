    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-4">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        <div class="form-group">
                            <label for="username">{{ 'security.login.username'|trans }}</label>
                            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="username">
                        </div>
                        <div class="form-group">
                            <label for="password">{{ 'security.login.password'|trans }}</label>
                            <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Password">
                        </div>

                        <div class="checkbox">
                            <label for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                {{ 'security.login.remember_me'|trans }}
                            </label>
                        </div>
                        <div class="form-group-btn">
                        <button type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                                class="btn btn-primary pull-right">Submit</button>
                        </div><!-- /.form-group-btn -->



                        <div class="form-group-bottom-link">
                            <a href="{{ path('fos_user_resetting_request') }}">I forgot my password <i class="fa fa-long-arrow-right"></i></a><br>
                            <a href="{{ path('fos_user_registration_register') }}">I don't have an account <i class="fa fa-long-arrow-right"></i></a>
                        </div><!-- /.form-group-bottom-link -->
                    </form>
                </div><!-- /.col-* -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.content -->











{% endblock fos_user_content %}
